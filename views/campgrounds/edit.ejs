<% layout("layouts/boilerplate") %>

<div class="row">
    <div class="col-6 offset-3">
        <h1>Edit Campground</h1>
        <form class="needs-validation" action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title">Title: </label>
                <input class="form-control" id="title" type="text" name="title" value="<%= campground.title %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location: </label>
                <input class="form-control" id="location" type="text" name="location" value="<%= campground.location %>" required>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Campground Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input name="price" type="text" class="form-control" aria-label="Amount (to the nearest dollar)" placeholder="0.00" value="<%= campground.price %>" required>
                </div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="description" name="description" rows="3" required><%= campground.description %></textarea>
            </div>
            <div class="mb-3">
                <input type="file" name="image" class="form-control" id="image" multiple>
            </div>
            <button type="submit" class="btn btn-success">Edit Campground</button>
        </form>
        <a href="/campgrounds">Cancel</a>
    </div>
</div>